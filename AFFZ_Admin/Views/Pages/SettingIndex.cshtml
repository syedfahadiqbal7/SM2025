@model ConfigurationSettings
@{
    ViewData["Title"] = "Admin Configuration";
}
<div class="page-wrapper page-settings">
    <div class="content">
        <!-- Page Header -->
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="mb-0">Admin Configuration</h5>
            </div>
            <div class="card-body">
                <form asp-action="Update" method="post">
                    <input type="hidden" asp-for="Id" />

                    <div class="mb-3">
                        <label asp-for="VATPercentage" class="form-label">VAT Percentage</label>
                        <input asp-for="VATPercentage" type="number" class="form-control" step="0.1" required />
                    </div>

                    <div class="mb-3">
                        <label asp-for="ServiceCharge" class="form-label">Service Charge (AED)</label>
                        <input asp-for="ServiceCharge" type="number" class="form-control" required />
                    </div>

                    <div class="mb-3 form-check">
                        <input asp-for="IsServiceChargePerQuantity" type="checkbox" class="form-check-input" />
                        <label asp-for="IsServiceChargePerQuantity" class="form-check-label">Service Charge Per Quantity</label>
                    </div>

                    <button type="submit" class="btn btn-primary">Update Settings</button>
                </form>
            </div>
        </div>
    </div>
</div>