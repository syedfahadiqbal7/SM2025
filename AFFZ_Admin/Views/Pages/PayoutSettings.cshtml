@model AFFZ_Admin.Models.PayoutSettings

<div class="page-wrapper">
    <div class="content">
        <form asp-action="UpdatePayoutSettings" method="post">
            <div class="row">
                <div class="col-lg-7 col-sm-12 m-auto">
                    <div class="content-page-header d-flex justify-content-between">
                        <h5>Payout Settings</h5>
                        <div class="active-switch d-flex align-items-center">
                            <h6 class="fs-14">Enable</h6>
                            <label class="switch">
                                <input asp-for="IsEnabled" type="checkbox">
                                <span class="sliders round"></span>
                            </label>
                        </div>
                    </div>

                    <div class="form-group">
                        <label>Payout No of days to process</label>
                        <input asp-for="PayoutNoOfDays" type="number" class="form-control">
                    </div>

                    <div class="form-group">
                        <label>No of Payouts (Per Month)</label>
                        <input asp-for="PayoutsPerMonth" type="number" class="form-control">
                    </div>

                    <div class="form-group">
                        <label>Minimum Payout Amount</label>
                        <input asp-for="MinimumPayoutAmount" type="number" class="form-control">
                    </div>

                    <div class="form-group">
                        <label>Payout Commission</label>
                        <input asp-for="PayoutCommission" type="number" class="form-control">
                    </div>

                    <button type="submit" class="btn btn-primary mt-3">Save Changes</button>
                </div>
            </div>
        </form>
    </div>
</div>
